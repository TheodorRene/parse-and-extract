generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

// lets store our somewhat clean pdf and html data in a table
model Document {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   // this will store the cleaned text content
  type      String   // e.g., "pdf" or "html"
  case      Case?
  createdAt DateTime @default(now())
}

model Case {
  id              Int      @id @default(autoincrement())
  title           String
  decisionType    String
  dateOfDecision  String
  office          String
  court           String
  caseNumber      String
  summary         String
  createdAt       DateTime @default(now())
  document        Document @relation(fields: [documentId], references: [id])
  documentId      Int @unique
}
